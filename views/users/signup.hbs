<h1 class="mb-3">Signup</h1>

{{#if errors}}
  <div class="alert alert-danger">
    <ul>
      {{#each errors as |error|}}
        <li>{{error}}</li>
      {{/each}}
    </ul>
  </div>
{{/if}}

<form method="POST" action="/signup">
  <div class="form-group mb-2">
    <label>Email</label>
    <input name="email" type="email" value="{{user.email}}" class="form-control {{#if errors.email}}is-invalid{{/if}}" />
    <small class="invalid-feedback">{{errors.email}}</small>
  </div>

  <div class="form-group">
    <label>Password</label>
    <input name="password" type="password" class="form-control {{#if errors.password}}is-invalid{{/if}}" />
    <small class="invalid-feedback">{{errors.password}}</small>
  </div>

  <div class="d-flex mt-5">
    <button type="submit" class="btn btn-primary me-2">Signup</button>
    <a class="btn btn-link" href="/login">Login</a>
  </div>
</form>